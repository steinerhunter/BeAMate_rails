<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <script src="js/bootstrap-modal.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "modal" %>
  <%= javascript_include_tag "flash_fade" %>
  <%= javascript_include_tag "smoothscroll" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<% if signed_in? %>
    <% if current_page? conversations_path%>
        <body class="body_conversation">
    <% else %>
        <body class="body_signed">
    <% end  %>
    <%= render 'layouts/header' %>
<% else  %>
    <% if current_page? root_path  %>
        <body class="body_nonsigned">
    <% elsif controller.controller_name == 'users' && controller.action_name == 'new' %>
        <body class="body_signup">
    <% end  %>
<% end  %>
<div id="wrapper">
  <div class="container">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </div>
  <div id="push"></div>
</div>
<% if !(current_page? root_path and signed_in?) %>
    <%= render  'layouts/footer' %>
<% end  %>
<div id="FeedbackButton">
  <%= link_to "", contact_path, class:"modal-link",
                                                              "data-target" => "#myModal",
                                                              "data-toggle" => "modal",
                                                              "data-backdrop" => "static" %>
</div>
<%= render 'modals/modal' %>

</body>
</html>