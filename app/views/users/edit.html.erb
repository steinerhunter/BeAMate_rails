<h1>Get your second chance!</h1>
<h4>Want to change your name or email address? <br>
  Tired of your password? <br>
  You've come to the right place!</h4>

<div class="row">
  <div class="span6">
    <%= form_for(@user, :remote => true, :html => { :id => "edit_user" } ) do |f| %>
        <%=  render 'shared/error_messages', object: f.object  %>
	<fieldset class="fields">
	  <div class="field">
            <%= f.label :name, "What's your name?" %>
            <%= f.text_field :name %>
	  </div>
	  <div class="field  ">
            <%= f.label :email, "What's your email address?"  %>
            <%= f.  text_field :email %>
	  </div>
	  <div class="field">
            <%= f.label :password, "Please select a password:"  %>
            <%= f.password_field :password %>
	  </div>
	  <div class="field">
            <%= f.label :password_confirmation, "Please confirm your password"  %>
            <%= f.password_field  :password_confirmation%>
	  </div>	
	</fieldset>
	<fieldset class="actions">
          <%= f.submit "Update Details!", :type => :image, :src => "assets/UpdateDetailsSubmit.png" %>
	</fieldset>
    <% end %>
  </div>
</div>
