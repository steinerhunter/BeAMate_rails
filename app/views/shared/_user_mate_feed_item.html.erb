<li id="<%= user_mate_feed_item.id %>">
  <h4><%= user_mate_feed_item.user.name %> is flying soon!</h4>
  <%=  link_to gravatar_for(user_mate_feed_item.user), user_mate_feed_item.user  %>
  <span class="user">
    <b>Flying to:</b><%= user_mate_feed_item.flying_to %><br>
    <b>Country of origin:</b> <%= user_mate_feed_item.flying_from  %><br>
    <b>Departure date:</b><%= user_mate_feed_item.departing_on  %><br>
    <b>Return date:</b> <%= user_mate_feed_item.returning_on  %><br>
    <b>more details:</b> <br>
    <%= user_mate_feed_item.content %><br>
    <%=  link_to "view profile", user_mate_feed_item.user  %>
  </span>
  <span class="timestamp">
    Posted <%=  time_ago_in_words(user_mate_feed_item.created_at) %> ago.
  </span>
  <% if current_user?(user_mate_feed_item.user)  %>
      <%=  link_to "delete" , user_mate_feed_item, method: :delete,
                                                                            data: { confirm: "Delete requestpost?"},
                                                                            title:user_mate_feed_item.content  %>
  <% end %>
</li>