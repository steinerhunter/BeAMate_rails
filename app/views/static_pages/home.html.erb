<% if signed_in? %>
    <div class="row">
      <aside class="span6">
        <section>
          <%= render 'shared/user_info' %>
        </section>
      </aside>
    </div>
    <div id="container" style="width:1200px">
      <div id="mate_feed" style=" width:500px;float:left;">
      <div class="span5">
        <h3>Help Someone Out.</h3>
        <%=  render 'shared/feed' %>
      </div>
    </div>
      <div id="request_feed" style="width:500px;float:left;">
      <div class="span5">
        <h3>Find a Mate.</h3>
       This is where we'll have the mate feed.
      </div>
    </div>
   </div>
<% else  %>
    <div class="center hero-unit">
      <h1>BeAMate</h1>
      <h2> This is BeAMate Home.</h2>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
    </div>
<% end %>
