<div class="row">
  <div class="span6">
    <h1>Make things better.</h1>
    <h3>What would you change on BeAMate?<br>
      We'd  love to hear what's on your mind!</h3>
<%= form_for(@feedback, :remote => true, :url => contact_path) do |form| %>
    <fieldset class="fields">
      <div class="field">
        <%= form.label :name, "What's your name?" %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :email, "What's your email address?" %>
        <%= form.text_field :email %>
      </div>

      <div class="field">
        <%= form.label :body, "What's on your mind?" %>
        <%= form.text_area :body,  "rows" => 3 %>
      </div>
    </fieldset>

    <fieldset class="actions">
      <%= form.submit "Feedback us!", :type => :image, :src => "assets/FeedbackUsSubmit.png"  %>
    </fieldset>
<% end %>
  </div>
</div>
