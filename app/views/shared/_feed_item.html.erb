<li id="<%= feed_item.id %>">
  <%=  link_to gravatar_for(feed_item.user), feed_item.user  %>
  <span class="user">
    <%= feed_item.user.name %> is looking for a mate who can get <%= feed_item.requested_item %>
    and is willing to pay <%= feed_item.willing_to_pay  %> for the service.<br>
    more details: <br>
    <%= feed_item.content %><br>
    <%=  link_to "view profile", feed_item.user  %>
  </span>
  <span class="timestamp">
    Posted <%=  time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user)  %>
      <%=  link_to "delete" , feed_item, method: :delete,
                                                                            data: { confirm: "Delete micropost?"},
                                                                            title:feed_item.content  %>
  <% end %>
</li>