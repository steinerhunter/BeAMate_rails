= simple_form_for :conversation, url: :conversations do |f|
  = f.input :recipients, :as => :hidden, :input_html => { :value => @recipient.email }
  = f.input :subject
  = f.input :body
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = submit_tag 'Cancel', type: :reset, class: 'btn btn-danger'
