<% provide(:title, 'Sign up') %>
<h1>Go ahead, join us!</h1>

<div class="row">
  <div class="span6">
    <%= form_for(@user) do |f| %>
        <%=  render 'shared/error_messages', object: f.object  %>

        <%= f.label :name, "What's your name?" %>
        <%= f.text_field :name %>

        <%= f.label :email, "What's your email address?" %>
        <%= f.text_field :email  %>

        <%= f.label :password, "Pick your password:" %>
        <%= f.password_field :password  %>

        <%= f.label :password_confirmation, "Confirm your password:" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Join Us!", class: "btn btn-large btn-primary" %>
   <% end  %>
  </div>
</div>
