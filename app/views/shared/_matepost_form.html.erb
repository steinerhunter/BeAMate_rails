<%= form_for(@matepost, :remote => true) do |f| %>
    <%=  render 'shared/error_messages', object: f.object  %>
    <fieldset class="fields">
      <div class="field">
        <%=  f.label :flying_to, "Where are you going?"   %>
        <%= f.text_field :flying_to, :autocomplete => autocomplete_place_name_mateposts_path %>
      </div>
      <div class="field">
        <%=  f.label :flying_from, "Where are you flying from?"   %>
        <%= f.text_field :flying_from, :autocomplete => autocomplete_place_name_mateposts_path %>
      </div>
      <div class="field">
        <%=  f.label :departing_on, "When are you going?"   %>
        <%= f.date_select :departing_on, :default => Date.today, :order => [:day, :month, :year], :start_year => Date.today.year, :end_year => Date.today.year + 3,
                                               :id => "matepost_select" %>
      </div>
      <div class="field">
        <%=  f.label :returning_on, "When will you return?"   %>
        <%= f.date_select :returning_on, :default => Date.today, :order => [:day, :month, :year], :start_year => Date.today.year, :end_year => Date.today.year + 3,
                                               :id => "matepost_select" %>
      </div>
      <div class="field">
        <%=  f.label :content, "Please add some more details:"   %>
        <%= f.text_area :content,  "rows" => 3 %>
      </div>
    </fieldset>
    <fieldset class="actions">
      <%= f.submit "Help Someone out!!", :type => :image, :src => "assets/HelpSomeoneSubmit.png"  %>
    </fieldset>
<% end %>
