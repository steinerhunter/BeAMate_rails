<div id="<%= requestpost.id %>" class="feed_item" style="width:350px">
  <ul class="user_request">
    <h4><%= requestpost.user.name %> needs help!</h4>
    <li><%=  link_to gravatar_for(requestpost.user), requestpost.user  %></li>
    <li><b>Wanted item:</b><%= requestpost.requested_item %></li>
    <li><b>Willing to give: </b><%= requestpost.give_giftcards  %></li><br><br>
    <li><b>More details:</b><%= requestpost.content %></li>
    <% if current_user?(requestpost.user)  %>
        <center><li><%=  link_to image_tag("RemovePost.png"), requestpost, method: :delete, title:requestpost.content, :remote=>true, :class=>'delete_requestpost'  %></li></center>
    <% else  %>
        <li><%= link_to image_tag("SendMessage.png"),  {:controller => "conversations", :action => "new", :recipient_id => requestpost.user.id}, :class => "modal-link",
                        "data-target" => "#myModal",
                        "data-toggle" => "modal",
                        "data-backdrop" => "static" %> <%=  link_to image_tag("ViewProfile.png"), requestpost.user  %></li>
    <% end %>
    <div class="timestamp">
      <li>This was posted <%=  time_ago_in_words(requestpost.created_at) %> ago.</li>
    </div>
  </ul>
</div>